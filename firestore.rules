rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /artifacts/{appId}/public/data/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow users to read and write their own settings
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to manage their own transactions
      match /transactions/{transactionId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Groups collection rules - simplified for development
    match /groups/{groupId} {
      // Allow authenticated users to read, write, create, and delete groups
      allow read, write, create, delete: if request.auth != null;
    }

    // Invitations collection rules - simplified for development
    match /invitations/{invitationId} {
      // Allow authenticated users to read, write, create, and delete invitations
      allow read, write, create, delete: if request.auth != null;
    }
  }
}
